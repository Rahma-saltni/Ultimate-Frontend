.settings-box.hide-settings
    .toggle-settings
        i.fa-solid.fa-gear
    .settings-content.text-center 
        .option-box.color-options
            h4.option-title Color Options
            - var themes = ['green-theme', 'blue-theme', 'red-theme', 'orange-theme']
            ul.list-unstyled 
                each theme in themes 
                    li(data-theme=theme)
        .option-box.font-options
            h4.option-title Fonts Options
            - var fonts = ['open', 'lato', 'poppins','roboto']
            select.form-control
                each font in fonts
                    option(value=font)=font + ' font'
        .option-box
            h4.option-title Sidebar Options
            
        